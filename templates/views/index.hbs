<!DOCTYPE html>


<html>
<head>
    <title>Weather App</title>
    <link rel="stylesheet" href="./css/styles.css">

</head>
<body>
    
    <div class="main-content">
            {{>header}}
            

            <form>
                <input placeholder="Enter location" >
                <button>Fetch</button>
            </form>

<h1>Weather data for Chennai</h1>
            <p id="msg-1" class="tempStyle"></p>

            <style>
                .tempStyle{
                    color: seashell;
                    font-size: 30px;
                    text-align: center;
                    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
                }
            </style>
            
    </div>

    {{>footer}}

    <script > console.log('Client side js')
        

        const Form = document.querySelector('form')
        const search = document.querySelector('input') 
        const msg = document.querySelector('#msg-1')

        Form.addEventListener('submit', (e)=> {
            e.preventDefault()

            fetch('http://localhost:5000/temp').then((response)=>{
            response.json().then((data) => {
                if(data.error){
                    console.log(data.error)
                    msg.textContent = data.error
                
                } else {
                    console.log(data.maxTemp)
                    msg.textContent = data.maxTemp + '`C'
                }
            })
        })

        })
    </script>


</body>
</html>